[core]
  editor = vim
  pager = less -F -X -S -R
[color]
  ui = auto
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[column]
  ui = auto
[commit]
  verbose = true
[pull]
  rebase = true
[fetch]
  writeCommitGraph = true
[branch]
  autosetuprebase = always
[push]
  default = current
[user]
  name = cigix
  email = cigix@cigix.me
[merge]
  tool = vimdiff
[rebase]
  autosquash = true
[rerere]
  enabled = true
[format]
  pretty = fuller
[log]
  date = iso
[init]
  defaultBranch = main
[alias]
  st = status
  co = checkout

  amend = commit --amend --no-edit
  abort = rebase --abort
  continue = rebase --continue
  skip = rebase --skip
  fixup = commit --fixup
  squash = commit --squash
  pushf = push --force-with-lease
  pushu = push --set-upstream
  pullr = pull --rebase

  tree = log --graph --full-history --all --decorate --oneline --color
  re = !git fetch && git rebase origin/main
  autosquash = !GIT_SEQUENCE_EDITOR=: git rebase origin/$(git rev-parse --abbrev-ref HEAD)^ --autosquash -i
  initial = !git commit -m 'Initial commit' --allow-empty && git tag init
  blam = blame -w -C -C -C

  dumbcommit = "!git commit -m \"[DUMBCOMMIT] $(curl whatthecommit.com/index.txt)\""
